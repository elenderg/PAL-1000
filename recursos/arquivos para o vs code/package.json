{
    "name": "plain-english-programming-language",
    "displayName": "Plain English Programming Language",
    "description": "Sintax Highlighting for Plain English Programming Language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "plain",
                "aliases": [
                    "Plain English",
                    "plain"
                ],
                "extensions": [
                    "plain"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "plain",
                "scopeName": "source.plain",
                "path": "./syntaxes/plain.tmLanguage.json"
            }
        ]
    },
    "devDependencies": {
        "js-yaml": "^4.1.0"
    }
}
